    <script>
     // Firebase configuration (Keep as is)
    const firebaseConfig = {
      apiKey: "AIzaSyAV_27osmUzqrYbJIatByVHigyKh0naSNM", // Replace with your actual API key if necessary
      authDomain: "min3s-d13d8.firebaseapp.com",
